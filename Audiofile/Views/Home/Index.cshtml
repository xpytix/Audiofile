@model Audiofile.ViewModels.HomeViewModel
    @using Audiofile.Infrastructure;
@{ ViewBag.Title = "Audiofile store"; }

<!-- Page Content -->

<div class="container">

    <div class="row">

        <div class="col-lg-3">
            <div class="title">
                <h1 style="font-size: 30px; color: #003941" class="my-4">Audiofile Store</h1>
            </div>

            <div class="list-group">
                <a style="color: white;" class="list-group-item list-group-item-action active">
                    Kategorie
                </a>
                @foreach (var kategoria in Model.Kategorie)
                {
                    <a href="@Url.Action("Lista", "Urzadzenia", new { nazwaKategori = kategoria.NazwaKategorii.ToLower() })" class="list-group-item list-group-item-action">@kategoria.NazwaKategorii </a>
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <class class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div style="border-top-left-radius: 40px;border-top-right-radius: 40px; border-bottom-right-radius: 40px; border-bottom-left-radius: 40px" class="carousel-inner" role="listbox">
                    <div class="carousel-item active">

                        <img class="d-block img-fluid" src="~/Content/Images/baner_1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/Images/baner_2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/Images/baner_3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="left-pattern"></div>

            <div class="row">
                @foreach (var nowosc in Model.Nowosci)
                {
                    <div class="col-lg-4 col-md-6 mb-4">

                        <div class="card h-100">
                            <a  href="@Url.Action("Szczegoly", "Urzadzenia", new { id = nowosc.UrzadzenieId})"><img class="card-img-top" src="@Url.UrzadzeniaIkonySciezka(nowosc.NazwaPlikuObrazka)" alt=""></a>
                            <div class="card-body">
                                <a class="dodajDoKoszykaLink" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = nowosc.UrzadzenieId })"> Dodaj do koszyka</a>
                                <h4 class="card-title">
                                   @nowosc.NazwaUrzadzenia - @nowosc.ProducentUrzadzenia
                                </h4>
                                <h5>@nowosc.CenaUrzadzenia</h5>
                                <p class="card-text"> @nowosc.OpisUrzadzenia</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                }
             

            </div>
            <!-- /.row -->

        </class>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
